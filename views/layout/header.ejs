<header class="bg-white">
  <nav
    class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">Fuzzar Tool</span>
        <img
          class="h-14 w-auto"
          src="/images/logoa.jpg"
          alt=""
        />
      </a>
    </div>
    <div class="hidden lg:flex my-auto lg:gap-x-12">
      <a class="text-sm font-semibold leading-6 text-gray-900" href="/profile/new">Crear perfil fuzzer</a>
      <a class="text-sm font-semibold leading-6 text-gray-900" href="/profile/execute">Realizar Prueba</a>    
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <% if(analysis !== undefined) { %>
        <div class="flex basis-1/12">
          <form action="/csv/download" method="get">
            <button
            class="group relative h-fit w-60 py-3 px-3 rounded-lg <%=analysis.length !== 0 ? 'bg-green-500 hover:text-white opacity-100' : '' %> shadow <%=analysis.length === 0 ? 'bg-gray-300 opacity-50' : 'hover:bg-green-600 hover:opacity-100' %>"
            id="export"
            <%=analysis.length === 0 ? 'disabled' : '' %>
            >
              <p>
                <span class="inline-block align-middle">
                  Exportar datos a CSV
                </span>
                

                <span class="inline-block align-middle">
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                    class="ms-3"
                  >
                    <path
                      d="M14 4H20M20 4V10M20 4L12 12"
                      stroke="#33363F"
                      stroke-width="2"
                    ></path>
                    <path
                      d="M11 5H7C5.89543 5 5 5.89543 5 7V17C5 18.1046 5.89543 19 7 19H17C18.1046 19 19 18.1046 19 17V13"
                      stroke="#33363F"
                      stroke-width="2"
                      stroke-linecap="round"
                    ></path>
                  </svg>
                </span>
              </p>
            </button>
          </form>
        </div>
        <% } %>
    </div>
  </nav>
</header>
<hr>
